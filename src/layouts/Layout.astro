---
// src/layouts/Layout.astro
import '/src/styles/global.css'
---
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="noindex">
    <meta name="theme-color" content="#000000">
    <title>Crypto News</title>
    <link href="/favicon.svg" rel="icon" />
    <link rel="manifest" href="/manifest.json">
  </head>
  <body class="bg-neutral-900">
    <header class="bg-neutral-800 shadow-lg fixed w-full top-0 z-50 border-b border-neutral-700">
      <div class="max-w-5xl mx-auto px-4">
        <div class="h-16 flex items-center">
          <h1>
            <a href="/" class="text-xl font-semibold text-gray-100 hover:text-blue-400">
              Crypto News
            </a>
          </h1>
        </div>
      </div>
    </header>
    <main class="container mx-auto px-4 pt-20 pb-12">
      <slot />
    </main>
  </body>
</html>